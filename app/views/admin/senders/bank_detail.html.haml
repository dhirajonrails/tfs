.main-content.widthalign
  #breadcrumbs.breadcrumbs
    :javascript
      try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
    %ul.breadcrumb
      %li
        %i.ace-icon.fa.fa-home.home-icon
        %a{ "href": "#" } BANK DETAIL
  .page-content
    .page-content-area
      .page-header
      .row
        .col-xs-12
          = form_for(:bank_detail, url: admin_senders_bank_detail_path, :html => {:class => "form-horizontal", id: 'userRegisterForm', :role => "form"}) do |bank|
            #senderRegisterBox.registerBox
              .form-group
                %label.col-sm-3.control-label.no-padding-right{for: "form-field-1-1" }  IFSC Code :
                .col-sm-5
                  = bank.text_field :ifsc_code, :class => 'form-control beneficiaryRegister registerForm', :id => 'ifscCode'
                  &nbsp; &nbsp; &nbsp;
                  %input.btn.btn-info{name: "searchBank", type: "button", value: "Search", :id=> 'check_bank'}
              .form-group
                %label.col-sm-3.control-label.no-padding-right{for: "form-field-1-1" }  Bank Name :
                .col-sm-5
                  = bank.text_field :name, :class => 'form-control beneficiaryRegister registerForm', :id => 'bankName'
              .form-group
                %label.col-sm-3.control-label.no-padding-right{for: "form-field-1-1" }  State :
                .col-sm-5
                  = bank.text_field :state, :class => 'form-control beneficiaryRegister', :id => 'bankState'
              .form-group
                %label.col-sm-3.control-label.no-padding-right{for: "form-field-1-1" }  District :
                .col-sm-5
                  = bank.text_field :district, :class => 'form-control beneficiaryRegister', :id => 'bankDistrict'
              .form-group
                %label.col-sm-3.control-label.no-padding-right{for: "form-field-1-1" }  City :
                .col-sm-5
                  = bank.text_field :city, :class => 'form-control beneficiaryRegister', :id => 'bankCity'
              .form-group
                %label.col-sm-3.control-label.no-padding-right{for: "form-field-1-1" }  Branch :
                .col-sm-5
                  = bank.text_field :branch, :class => 'form-control beneficiaryRegister', :id => 'bankBranch'
              .form-group
                %label.col-sm-3.control-label.no-padding-right{for: "form-field-1-1" }  Address :
                .col-sm-5
                  = bank.text_field :address, :class => 'form-control beneficiaryRegister', :id => 'bankAddress'
              .form-group
                .clearfix.form-actions
                  .col-md-offset-3.col-md-9
                    %input.btn.btn-info#submitRegister{name: "Update", type: "submit", value: "Update"}
                      %i.ace-icon.fa.fa-check.bigger-110

  = javascript_include_tag 'sender.js'

:javascript
  $(document).ready(function(){
    $("input.registerForm").attr("required", 'required');
    sender = new window.SenderRegister();
    sender.init();
  })
