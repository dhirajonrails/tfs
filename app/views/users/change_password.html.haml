.main-content.widthalign
  .page-content
    .page-content-area
      .page-header
        %h1 Change Password
      .row
        .col-xs-12
          = form_for(:user, url: "update_password", :html => {:class => "form-horizontal", :role => "form", id: 'updatePasswordForm'}, method: 'post') do |user|
            .form-group
              %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Current Password :
              .col-sm-5
                .input-group
                  %span.input-group-addon
                  = user.password_field :current_password, :class => "col-xs-12 col-sm-12",:placeholder=>"Current Password"                          
            .form-group
              %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} New Password :
              .col-sm-5
                .input-group
                  %span.input-group-addon
                  = user.password_field :password, :class => "col-xs-12 col-sm-12",:placeholder=>"Email"              
            .form-group
              %label.col-sm-3.control-label.no-padding-right{:for => "form-field-1"} Confirm Password :
              .col-sm-5
                .input-group
                  %span.input-group-addon
                  = user.password_field :password_confirmation, :class => "col-xs-12 col-sm-12",:placeholder=>"Confirm Password"              
            .clearfix.form-actions
              .col-md-offset-3.col-md-9
                %input.btn.btn-info{name: "saveForm", type: "submit", value: "Update Password"}
                &nbsp; &nbsp; &nbsp;
                %input.btn.btn-info{name: "Reset", type: "reset", value: "Reset"}
                  %i.ace-icon.fa.fa-undo.bigger-110

  :javascript
    try{ace.settings.check('sidebar' , 'collapsed')}catch(e){}
    $(document).ready(function(){
      validation = new Validation('Forms')
      validation.validate_change_password('#updatePasswordForm')
    })
