      %li
        %a{ href: admin_request_limits_merchants_path }
          %i.menu-icon.fa.fa-list
          %span.menu-text MER LIMIT REQUEST
          %span.badge.badge-primary#mer_limit_request_badge
        %b.arrow
    - if current_user.has_role?('super_admin') || (['admin', 'distributor_limit_request_view'] - current_user.roles.pluck(:name)).empty?
