        %a{ "href"=> quick_request_admin_senders_path }
          %i.menu-icon.fa.fa-file-o
          %span.menu-text QUICK REQUEST
          %span.badge.badge-primary#quick_request_badge
        %b.arrow
    - if current_user.has_role?('super_admin') || (current_user.roles.pluck(:name) & ['distributor_view', 'distributor_new', 'distributor_add_limit','distributor_less_limit', 'distributor_view_limit', 'distributor_limit_history']).any?
