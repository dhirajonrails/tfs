    })
  %ul.nav.nav-list
    - if current_user.has_role?('super_admin')
      %li
        %a{ "href"=>"/admin/dashboard" }
          %i.menu-icon.fa.fa-tachometer
          %span.menu-text Dashboard
        %b.arrow
    - if current_user.has_role?('super_admin') || (['admin', 'normal_view_request'] - current_user.roles.pluck(:name)).empty?
      %li
        %a{ "href"=> admin_senders_path }
          %i.menu-icon.fa.fa-file-o
          %span.menu-text VIEW REQUEST
          %span.badge.badge-primary#view_request_badge
        %b.arrow
    - if current_user.has_role?('super_admin') || (['admin', 'quick_view_request'] - current_user.roles.pluck(:name)).empty?
