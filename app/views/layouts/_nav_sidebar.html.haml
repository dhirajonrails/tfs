        %a.dropdown-toggle{"href"=>"#"}
          %i.menu-icon.fa.fa-desktop
          %span.menu-text DISTRIBUTORS
          %b.arrow.fa.fa-angle-down
        %b.arrow
        %ul.submenu
          - if current_user.has_role?('super_admin') || (['admin', 'distributor_new'] - current_user.roles.pluck(:name)).empty?
            %li.active
              %a{"href"=>'/admin/distributors/new', remote: true}
                %i.menu-icon.fa.fa-caret-right
