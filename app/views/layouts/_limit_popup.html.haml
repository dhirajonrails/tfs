#exampleModal.modal.fade{"aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#exampleModalLabel.modal-title Add Distributor Limit
      .modal-body
        %form
          .form-group
            %label.control-label{:for => "recipient-name"} Select Option
            %br/
            %select.selectpicker{"data-style" => "btn-success col-sm-12", :style => "width:100%;"}
              %option QUICK
              %option NORMAL
          .form-group
            %label.control-label{:for => "message-text"} Add Limit:
            %input#recipient-name.form-control{:type => "text"}/
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} CLOSE
        %button.btn.btn-primary{:type => "button"} SUBMIT
